{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"engines": {
		"node": ">=20.11.1",
		"npm": ">=10.2.4"
	},
	"scripts": {
		"build": "rm -rf dist && npm run tsc && npm run copy-package",
		"tsc": "tsc --project tsconfig.compile.json",
		"tsc:w": "tsc --project tsconfig.json -w",
		"copy-package": "cp package.json dist/package.json && cp package-lock.json dist/package-lock.json",
		"start": "FRONTEND_URL=http://localhost:3000 JWT_SECRET=not-so-secret nodemon --watch \"src/**/*.ts\" --ignore \"node_modules/**/*\" --exec ts-node src/index.ts",
		"start:prod": "cross-env NODE_ENV=production node dist/index.js",
		"test:lint": "eslint src --ext .ts",
		"test:lint:fix": "eslint src --ext .ts --fix",
		"typeorm": "tsed typeorm"
	},
	"dependencies": {
		"@tsed/ajv": "^6.114.16",
		"@tsed/common": "^6.114.16",
		"@tsed/core": "^6.114.16",
		"@tsed/di": "^6.114.16",
		"@tsed/exceptions": "^6.114.16",
		"@tsed/platform-express": "^6.114.16",
		"@tsed/swagger": "^6.114.16",
		"@tsed/typeorm": "^6.114.16",
		"@types/swagger-schema-official": "^2.0.22",
		"ajv": "^8.11.0",
		"bcrypt": "^5.0.1",
		"body-parser": "^1.20.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"express": "^4.18.1",
		"helmet": "^5.1.0",
		"jsonwebtoken": "^8.5.1",
		"method-override": "^3.0.0",
		"resend": "^3.2.0",
		"sqlite3": "^5.0.8",
		"typeorm": "^0.2.26"
	},
	"devDependencies": {
		"@tsed/cli-plugin-eslint": "^3.20.17",
		"@tsed/cli-plugin-typeorm": "^3.20.17",
		"@types/bcrypt": "^5.0.0",
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/method-override": "^0.0.32",
		"@types/node": "^16.0.0",
		"@types/react": "^18.2.74",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"concurrently": "^7.2.1",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"nodemon": "^2.0.16",
		"ts-node": "^10.8.1",
		"typescript": "^4.7.3"
	}
}